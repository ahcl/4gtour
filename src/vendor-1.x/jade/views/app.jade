// top navbar
header.topnavbar-wrapper(ng-include="'app/views/partials/top-navbar.html'", ng-controller="TopbarController")

// sidebar
aside.aside(ng-include="'app/views/partials/sidebar.html'", ng-controller="SidebarController")

// offsidebar
aside.offsidebar(ng-if="false" ng-include="'app/views/partials/offsidebar.html'")

// Main section
section(data-ng-class="{'full-screen': app.isFullScreen}", block-ui="module-block")

  // Page content
  .content-wrapper(ui-view="", autoscroll="false", ng-class="app.viewAnimation")
  
// Page footer
footer(ng-include="'app/views/partials/footer.html'")
